<Alloy>
	<View id="Wrapper">
		<!-- this is the main view or wrapper for this screen -->
		<Require type="widget" src="com.chariti.navigationBar" id="NavigationBar" image="logo.png" />
		<!-- this requires the widget code that generates the navbar for us -->
		<View id="container">
			<View class="inner">
				<View id="logoWrapper">
					<ImageView id="wmse"></ImageView>
				</View>
			</View>
			<View id="controls">
				<View class="inner">
					<View class="nudge"></View>
					<Button id="playlist" class="orangeButton">Playlist</Button>
					<Button id="blog" class="orangeButton">Blog</Button>
				</View>
			</View>
			<View id="streamToggle">
				<ImageView id="streamToggleButton">Play</ImageView>
			</View>
		</View>
	</View>
</Alloy>